<addon name="transmission" version="0.0.1">
    <depends on="BEAST.base" atleast="2.7.5"/>
    <depends on="BEAST.app" atleast="2.7.5"/>

    
    <service type="beast.base.core.BEASTInterface">
        <provider classname="transmission.distribution.TransmissionTreeLikelihood"/>
        <provider classname="transmission.distribution.GammaHazardFunction"/>
        <provider classname="transmission.distribution.Validator"/>
        
        <provider classname="transmission.operator.BlockOperator"/>
        <provider classname="transmission.operator.InfectionMover"/>
        <provider classname="transmission.operator.InfectionMover2"/>
        
		<provider classname="transmission.logger.ColouredTreeLogger"/>
		
        <provider classname="transmission.util.ColourLogger"/>
        <provider classname="transmission.util.InfectorOfLogger"/>
	</service>    
	
	
	<packageapp description="Convert transmission tree log into trace log with who infected who" class="transmission.util.TransmissionTree2InfectorOfLog" args=""/>
	<packageapp description="Calculate coverage of who infected who" class="transmission.util.InfectedByCoverageCalculator" args=""/>
    <packageapp description="Simulates transmission tree" class="transmission.util.SimulatedTransmissionTree" args=""/>
	
</addon>
